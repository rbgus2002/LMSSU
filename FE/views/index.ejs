  <script>
    function selectNotice(idx) {

      let notice_type_list = document.getElementsByClassName("notice_type");

      for (let i = 0; i < notice_type_list.length; i++) {
        if (notice_type_list[i].classList.contains('notice_select')) {
          notice_type_list[i].classList.remove('notice_select');
        }
        if (i == idx) {
          notice_type_list[i].classList.add('notice_select');
        }
      }
    }

    function selectNoticePage(idx) {

      let notice_page_list = document.getElementsByClassName("notice_page_number")[0].querySelectorAll('p');

      for (let i = 0; i < notice_page_list.length; i++) {
        if (notice_page_list[i].classList.contains('notice_page_select')) {
          notice_page_list[i].classList.remove('notice_page_select');
        }
        if (i == idx) {
          notice_page_list[i].classList.add('notice_page_select');
        }
      }
    }
